# ERP Sistema - Environment Configuration

# Application
APP_NAME="ERP Sistema"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=erp_sistema
DB_USERNAME=erp_user
DB_PASSWORD=your_secure_database_password_here
DB_ROOT_PASSWORD=your_secure_root_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0
REDIS_PREFIX=erp:

# JWT Configuration
JWT_SECRET=your_256_bit_secret_key_here_must_be_at_least_32_characters_long
JWT_ISSUER=ERP-Sistema
JWT_ACCESS_TTL=3600
JWT_REFRESH_TTL=604800

# Security APIs
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@erp-sistema.local
MAIL_FROM_NAME="${APP_NAME}"

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# File Storage
FILESYSTEM_DRIVER=local
STORAGE_PATH=/var/www/html/storage

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_REDIS_CONNECTION=default

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=erp_cache

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Security Settings
SECURITY_HEADERS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_HSTS_ENABLED=true

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning
LOG_ELASTICSEARCH_ENABLED=true

# Timezone
APP_TIMEZONE=UTC

# Locale
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en

# HTTPS Configuration (for production)
HTTPS_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker Configuration
DOCKER_PHP_VERSION=8.2
DOCKER_NGINX_VERSION=1.25
DOCKER_MYSQL_VERSION=8.0
DOCKER_REDIS_VERSION=7.2

# Development/Testing (set to false in production)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
QUERY_LOG_ENABLED=false
