# PagSeguro
PAGSEGURO_EMAIL=
PAGSEGURO_TOKEN=
PAGSEGURO_ENVIRONMENT=sandbox

# Integrações de Comunicação
# WhatsApp Business
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_VERIFY_TOKEN=

# Twilio (SMS)
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE=

# Integrações Fiscais
# Focus NFe
FOCUS_NFE_TOKEN=
FOCUS_NFE_ENVIRONMENT=homologacao

# Integrações de Analytics
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Configurações de Monitoramento
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Configurações de CDN
CDN_URL=
CDN_BUCKET=
