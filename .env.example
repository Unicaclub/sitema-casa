# Configurações da Aplicação
APP_NAME="ERP Sistema"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/Sao_Paulo
APP_KEY=base64:your-32-character-secret-key-here

# Configurações do Banco de Dados
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=erp_sistema
DB_USERNAME=root
DB_PASSWORD=

# Banco de Relatórios (Opcional)
REPORTS_DB_HOST=127.0.0.1
REPORTS_DB_PORT=3306
REPORTS_DB_DATABASE=erp_reports
REPORTS_DB_USERNAME=root
REPORTS_DB_PASSWORD=

# Configurações do Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Configurações de Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@empresa.com
MAIL_FROM_NAME="ERP Sistema"

# Configurações de Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=storage/uploads

# Configurações de Backup
BACKUP_DISK=local
BACKUP_PATH=storage/backups
BACKUP_RETENTION_DAYS=30

# Integrações de Pagamento
# PIX
PIX_CLIENT_ID=
PIX_CLIENT_SECRET=
PIX_CERTIFICATE_PATH=
PIX_ENVIRONMENT=sandbox

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
